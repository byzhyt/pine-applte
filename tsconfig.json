{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "types": ["vite/client", "@dcloudio/types", "pinia-plugin-persist-uni"],
    "ignoreDeprecations": "5.0",
    "useDefineForClassFields": true,
    "strict": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "allowJs": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["esnext", "dom"]
  },
  "include": [
    ".eslintrc.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "./auto-imports.d.ts",
    "./components.d.ts"
  ]
}
